<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "Cocoon Black.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <%= link_to "The Store", "store", class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "About Us", "aboutus", class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "The Community", "community", class: "navbar-wagon-item navbar-wagon-link" %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="store">The Store</a></li>
        <li><a href="aboutus">About Us</a></li>
        <li><a href="community">The Community</a></li>
      </ul>
    </div>
  </div>
</div>

